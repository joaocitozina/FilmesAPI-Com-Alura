          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "204": {
            "description": "Atualização parcial realizada com sucesso."
          },
          "400": {
            "description": "Dados inválidos ou formato do patch incorreto."
          },
          "404": {
            "description": "Se o filme com o ID especificado não for encontrado."
          }
