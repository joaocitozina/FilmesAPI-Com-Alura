            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateFilmeDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateFilmeDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "204": {
            "description": "Atualização realizada com sucesso (Sem Conteúdo)."
          },
          "400": {
            "description": "Dados inválidos ou ID na rota não confere com o objeto."
          },
          "404": {
            "description": "Se o filme com o ID especificado não for encontrado."
          }
        }
      },
      "patch": {
        "tags": [
          "Filme"
        ],
        "summary": "Atualiza parcialmente os dados de um filme existente (ex: apenas o título ou a nota).",
