            }
          }
        ],
        "responses": {
          "200": {
            "description": "Retorna o filme solicitado."
          },
          "404": {
            "description": "Se o filme com o ID especificado não for encontrado."
          }
        }
      },
      "put": {
        "tags": [
          "Filme"
        ],
        "summary": "Atualiza completamente os dados de um filme existente.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "O ID do filme a ser atualizado.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "description": "O objeto FilmeDto com os novos dados.",
          "content": {
            "application/json-patch+json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateFilmeDto"
              }
            },
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateFilmeDto"
